# end of class MyFrame

if __name__ == "__main__":
    gettext.install("WebGrabGui") # replace with the appropriate catalog name

    app = wx.PySimpleApp(0)
    wx.InitAllImageHandlers()
    
    if not getProcessPID('kodi.bin'):
        print "Kodi not running, WebGrabGui not possible"
        dlg = wx.MessageDialog(None, 
                "Kodi not running, WebGrabGui not possible",
                "Kodi error", wx.OK|wx.ICON_ERROR)
        result = dlg.ShowModal()
        dlg.Destroy()
        exit()
        
    base = os.path.join(GetDataFolder(),"userdata/addon_data")
    settingspath = os.path.join(os.path.join(base,__addon__),"settings.xml")
    libpath = os.path.join(os.path.join(os.path.join(GetDataFolder(),"addons"),__addon__),"resources/lib")
    sys.path.append(libpath)
    import progress
    
    #get settings
    GetSettingsFromKodi(settingspath)

    frame_1 = MyFrame(None, wx.ID_ANY, "")
    app.SetTopWindow(frame_1)
    frame_1.Show()
    
    app.MainLoop()
